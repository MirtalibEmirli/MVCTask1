@model IEnumerable<Task1.Entities.Concrets.Drink>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://1000logos.net/wp-content/uploads/2019/07/KFC-logo-2006.png" rel="icon" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cold Drink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            display: grid;
            place-items: center; /* Centers content in the grid container */
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Makes the grid responsive */
            grid-gap: 20px; /* Adds space between the grid items */
            width: 90%;
            margin: 0 auto; /* Centers the container horizontally */
            padding-top: 30px;
        }

        .drink-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .drink-item img {
                max-width: 100%;
                height: 250px;
                object-fit: cover;
                margin-bottom: 20px;
                border-radius: 8px;
            }

        .drink-info {
            text-align: center;
        }

            .drink-info h2 {
                font-size: 20px;
                margin-bottom: 10px;
                color: #333;
            }

            .drink-info p {
                font-size: 16px;
                margin: 5px 0;
                color: #555;
            }

            .drink-info strong {
                font-weight: bold;
                color: #333;
            }

        

        }
    </style>
</head>
<body>

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="drink-item">
                <img src="@item.Img" alt="@item.Name" class="img-fluid">
                <div class="drink-info">
                    <h2>@item.Name</h2>
                    <p><strong>Description:</strong> @item.Description</p>
                    <p><strong>Price:</strong> @item.Price TL</p>
                    <p><strong>Type:</strong> @item.Type</p>
                    <p><strong>Volume:</strong> @item.Liter L</p>
                </div>
            </div>
        }
    </div>
    <div class="footer" style="background-color: #333; color: white; text-align: center; padding: 20px 0; margin-top: 50px;">
        <p>© 2025  Mr. Restaurant. All rights reserved. Visit our <a href="#" style="color: #007bff; text-decoration: none;">Privacy Policy</a></p>
        <p>
            <a href="https://www.linkedin.com/in/mirtalib-emirli-a66922287?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
               style="color: #007bff; text-decoration: none; font-weight: bold;">
                By Mirtalib Amirli
            </a>
        </p>
    </div>

</body>
</html>
