@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drinks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #1a202c; /* Dark blue */
            padding: 20px;
            gap: 15px;
        }

            .header a {
                color: white;
                text-decoration: none;
                padding: 10px 20px;
                background-color: #007bff;
                border-radius: 5px;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .header a:hover {
                    background-color: #0056b3;
                    transform: scale(1.05);
                }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .drink-item {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

            .drink-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .drink-item img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

                .drink-item img:hover {
                    transform: scale(1.1);
                }

        .drink-info {
            padding: 15px;
            text-align: center;
        }

            .drink-info h2 {
                font-size: 20px;
                color: #333;
                margin-bottom: 10px;
                transition: color 0.3s ease;
            }

                .drink-info h2:hover {
                    color: #007bff;
                }

            .drink-info p {
                font-size: 14px;
                color: #555;
                margin-bottom: 8px;
            }

        /* Footer */
        .footer {
            text-align: center;
            padding: 15px;
            background-color: #1a202c;
            color: white;
            margin-top: 50px;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="FastFood" asp-action="Index">FastFood</a>
        <a asp-controller="HotMeals" asp-action="Index">HotMeals</a>
    </div>

    <!-- Drinks -->
    <div class="container">
        @foreach (var item in Model.ColdDrinks)
        {
            <div class="drink-item">
                <img src="@item.Img" alt="@item.Name" />
                <div class="drink-info">
                    <h2>@item.Name</h2>
                    <p>Description: @item.Description</p>
                    <p>Price: $@item.Price</p>
                    <p>Type: @item.Type</p>
                    <p>Volume: @item.Liter L</p>
                </div>
            </div>
        }
        @foreach (var item in Model.HotDrinks)
        {
            <div class="drink-item">
                <img src="@item.Img" alt="@item.Name" />
                <div class="drink-info">
                    <h2>@item.Name</h2>
                    <p>Liter: @item.Liter</p>
                    <p>Price: $@item.Price</p>
                    <p>Description: @item.Description</p>
                    <p>Type: @item.Type</p>
                </div>
            </div>
        }
    </div>

    <div class="footer" style="background-color: #333; color: white; text-align: center; padding: 20px 0; margin-top: 50px;">
        <p>© 2025  Mr. Restaurant. All rights reserved. Visit our <a href="#" style="color: #007bff; text-decoration: none;">Privacy Policy</a></p>
        <p>
            <a href="https://www.linkedin.com/in/mirtalib-emirli-a66922287?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
               style="color: #007bff; text-decoration: none; font-weight: bold;">
                By Mirtalib Amirli
            </a>
        </p>
    </div>

</body>
</html>
