@model IEnumerable<Task1.Entities.Concrets.Meal>
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HotMeals</title>
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #343a40;
            padding: 20px 0;
            gap: 10px;
        }

            .header a {
                display: inline-block;
                padding: 10px 20px;
                color: white;
                background-color: #007bff;
                text-decoration: none;
                border-radius: 4px;
                transition: all 0.3s ease;
            }

                .header a:hover {
                    background-color: #0056b3;
                    transform: scale(1.05);
                }

        .container {
            display: grid;
            place-items: center;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            grid-gap: 20px;
            height: auto;
            width: 90%;
            margin: 50px auto;
            padding-top: 30px;
        }

        .drink-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }

            .drink-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .drink-item img {
                max-width: 100%;
                height: 200px;
                object-fit: cover;
                margin-bottom: 20px;
                border-radius: 8px;
            }

        .drink-info h2 {
            font-size: 24px;
            margin: 10px 0;
            color: #333;
        }

        .drink-info p {
            font-size: 16px;
            margin: 5px 0;
            font-style: italic;
            color: black;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 15px;
            background-color: #343a40;
            color: white;
            margin-top: 50px;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #0056b3;
                }
    </style>
    <link href="https://1000logos.net/wp-content/uploads/2019/07/KFC-logo-2006.png" rel="icon" />
</head>

<body>
    <!-- Header -->
    <div class="header">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-action="Index" asp-controller="FastFood">FastFood</a>
        <a asp-controller="drinks" asp-action="Index">Drinks</a>
    </div>

    <!-- Hot Meals -->
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="drink-item">
                <div class="drink-image">
                    <img src="@item.Img" alt="@item.Name" />
                </div>
                <div class="drink-info">
                    <h2>@item.Name</h2>
                    <p>Description: @item.Description</p>
                    <p>Price: @item.Price</p>
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="footer" style="background-color: #333; color: white; text-align: center; padding: 20px 0; margin-top: 50px;">
        <p>© 2025 Hot Meals. All rights reserved. <a href="#" style="color: #007bff; text-decoration: none;">Privacy Policy</a></p>
        <p>
            <a href="https://www.linkedin.com/in/mirtalib-emirli-a66922287?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
               style="color: #007bff; text-decoration: none; font-weight: bold;">
                By Mirtalib Amirli
            </a>
        </p>
    </div>

</body>
</html>
