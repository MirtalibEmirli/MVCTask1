@model IEnumerable<Task1.Entities.Meal>;
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>YourMealSearch</title>

   <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container2 {
            display: grid;
            place-items: center; /* Centers content in the grid container */
            grid-template-columns: repeat(3, 1fr); /* Creates 3 equal columns */
            grid-gap: 20px; /* Adds space between the grid items */
            height: 100vh; /* Makes sure the container takes the full height of the viewport */
            width: 90%; /* Keeps the container width at 90% of the viewport */
            margin: 0 auto; /* Centers the container horizontally */
            padding-top: 30px; /* Adds padding to the top */
        }



        .div-item {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
        }

            .div-item img {
                max-width: 300px;
                max-height: 300px;
                object-fit: cover;
                margin-right: 20px;
                border-radius: 8px;
            }

        .div-info {
            flex: 1;
            font-weight: bold;
        }

            .div-info h2 {
                font-size: 24px;
                margin: 10px 0;
            }

            .div-info p {
                font-size: 16px;
                margin: 5px 0;
            }





        .div-item img {
            margin-bottom: 20px;
        }

   </style>
</head>

<body>
    <div class="container2">
        @foreach (var item in Model)
        {

                    <div class="div-item">
                    <div class="div-image">
                        <img src="@item.Img" class="img-fluid" >
                    </div>
               <div class="div-info">
                        <h2>Name:@item.Name</h2>
                        <p>Description:@item.Description</p>
                        <p>Price:@item.Price</p>
                        <p>Price:@item.Price</p>
               </div>
                </div>
        }
    </div>

</body>
</html>