@model  IEnumerable<Task1.Entities.Concrets.FastFood>;
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <link href="https://1000logos.net/wp-content/uploads/2019/07/KFC-logo-2006.png" rel="icon" />
 
    <title>FastFood</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa; /* Açıq fon rəngi */
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #343a40; /* Tünd başlıq rəngi */
            padding: 20px 0px;
            gap:10px;
        }

            .header button {
                margin: 0 10px;
                padding: 10px 20px;
                font-size: 16px;
                color: #fff;
                background-color: #007bff; /* Bootstrap mavi */
                border: none;
                border-radius: 4px;

            }

                .header button:hover {
                    background-color: #0056b3; /* Daha tünd mavi hover effekti */
                }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Cavab verən grid */
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .drink-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .drink-item:hover {
                transform: translateY(-10px); /* Hover zamanı card yuxarı qalxır */
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Daha güclü kölgə */
            }

            .drink-item img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .drink-info {
            padding: 20px;
            text-align: center;
        }

            .drink-info h2 {
                font-size: 20px;
                color: #333;
                margin-bottom: 10px;
            }

            .drink-info p {
                font-size: 14px;
                color: #666;
                margin-bottom: 5px;
            }

            .drink-info h1 {
                font-size: 18px;
                color: #007bff;
                margin-top: 20px;
            }

        .badge {
            display: inline-block;
            margin: 5px 5px 0 0;
            padding: 5px 10px;
            font-size: 12px;
            color: #fff;
            background-color: #ffc107;
            border-radius: 20px;
        }
        /* Footer */
        .footer {
            text-align: center;
            padding: 15px;
            background-color: #1a202c;
            color: white;
            margin-top: 50px;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #0056b3;
                }
    </style>

</head>
<body>
    <!-- Header düymələri -->
    <div class="header">
        <a asp-controller="Home" asp-action="Index" style="display: inline-block; padding: 10px 20px; color: white;cursor: pointer; background-color: #007bff; text-decoration: none; border-radius: 4px;
                transition: all 0.3s;">Home</a>

        <a asp-action="Index" asp-controller="Drinks" style="
                transition: all 0.3s; cursor: pointer; display: inline-block; padding: 10px 20px; color: white; background-color: #007bff; text-decoration: none; border-radius: 4px;">Drinks</a>
        <a asp-action="Index" style="cursor: pointer; display: inline-block; padding: 10px 20px; color: white; transition: all 0.3s; background-color: #007bff; text-decoration: none; border-radius: 4px;" asp-controller="HotMeals">HotMeals</a>
        
    </div>

    <!-- Məhsul konteyneri -->
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="drink-item">
                <img src="@item.Img" alt="@item.Name">
                <div class="drink-info">
                    <h2>Name: @item.Name</h2>
                    <p>Fat: @item.Fat g</p>
                    <p>Carbohydrates: @item.Carbohydrates g</p>
                    <p>Description: @item.Description</p>
                    <p>Proteins: @item.Protein g</p>
                    <h1>Allergens</h1>
                    @foreach (var item2 in item.Allergens)
                    {
                        <span class="badge">@item2</span>
                    }
                </div>
            </div>
        }
    </div>
    <!-- Footer -->
  
    <div class="footer" style="background-color: #333; color: white; text-align: center; padding: 20px 0; margin-top: 50px;">
        <p>© 2025  Mr. Restaurant. All rights reserved. Visit our <a href="#" style="color: #007bff; text-decoration: none;">Privacy Policy</a></p>
        <p>
            <a href="https://www.linkedin.com/in/mirtalib-emirli-a66922287?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
               style="color: #007bff; text-decoration: none; font-weight: bold;">
                By Mirtalib Amirli
            </a>
        </p>
    </div>

</body>

</html>
